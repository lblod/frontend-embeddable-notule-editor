{
  "extends": "@tsconfig/ember/tsconfig.json",
  "include": ["main.ts", "typeImports/**/*", "app/**/*"],
  "compilerOptions": {
    // Tell TypeScript to read JS files
    "allowJs": true,
    "checkJs": false,
    // Don't check the imports of main.js
    "skipLibCheck": true,
    "types": [
      "ember-source/types"
    ]
  },
  "glint": {
    "environment": [
      "ember-loose",
      "ember-template-imports"
    ],
    "checkStandaloneTemplates": false
  }
}
